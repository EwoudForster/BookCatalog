@page "{PublisherId:Guid}"
@model BookCatalog.Web.Pages.Publishers.DetailsModel

<div class="row mt-5">
    <h1 class="align-items-center text-center">@Model.Publisher.Name</h1>
    <partial name="_StatisticsPartial" model="Model.Statistics"/>
                @if (User.IsInRole("Administrator"))
    {
        <div class="align-items-center text-center">
            <a class="col m-3 text-light-emphasis" asp-page="/Publishers/Form">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="text-success bi bi-plus-square-fill" viewBox="0 0 25 25">
                <path d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zm6.5 4.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3a.5.5 0 0 1 1 0" />
            </svg>
        </a>
        <a class="col m-3 text-light-emphasis" asp-page="/Publishers/Form" asp-route-PublisherId="@Model.Publisher.Id">
            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="text-primary bi bi-pen-fill" viewBox="0 0 25 25">
                <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001" />
            </svg>
        </a>
        <a class="col m-3 text-light-emphasis" asp-page="/Publishers/Delete" asp-route-PublisherId="@Model.Publisher.Id">

            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class=" text-danger bi bi-trash3-fill" viewBox="0 0 25 25">
                <path d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5m-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5M4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06m6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528M8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5" />
            </svg>
        </a>
    </div>
    }

    @if (Model.Publisher.Books.Count() >= 1)
    {
        <h2 class="align-items-center text-center">Books With this publisher</h2>
        <div class="d-flex col-10 m-auto flex-wrap justify-content-center gap-3">
            @foreach (var book in Model.Publisher.Books)
            {
                <partial name="_BookCardPartial" model="@book" />
            }
        </div>
    }
    else {
        <h2 class="align-items-center text-center">No Books With this publisher</h2>

    }
</div>
