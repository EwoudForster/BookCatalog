@page
@model BookCatalog.Web.Pages.IndexModel

<div class="hero-section w-100 minus-padding position-relative overflow-hidden">
    <div class="hero-background position-absolute w-100 h-100" style="background: linear-gradient(135deg, rgba(0,0,0,0.7), rgba(0,0,0,0.4)), url('https://images.pexels.com/photos/159866/books-book-pages-read-literature-159866.jpeg'); background-size: cover; background-position: center;"></div>
    <div class="container position-relative" style="z-index: 2;">
        <div class="row justify-content-center text-center py-5">
            <div class="col-lg-8">
                <h1 class="display-2 fw-bold text-white mb-4 hero-title">WELCOME TO OUR<br>BOOKCATALOG</h1>
                <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-5">
                    <a asp-page="/Books/Index" class="btn btn-primary btn-lg px-5 py-3 me-md-3 rounded-pill shadow-lg">Explore Books</a>
                    <a asp-page="/Contact/Index" class="btn btn-outline-light btn-lg px-5 py-3 rounded-pill">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="stats-section py-5" style="background: linear-gradient(135deg, #ACB4C7 0%, #98A0B2 100%);">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6 text-white">
                <div class="stats-content p-4 rounded-4" style="background: rgba(255,255,255,0.1); backdrop-filter: blur(10px);">
                    <h2 class="display-5 fw-bold mb-4">Our Bookcatalog</h2>
                    <p class="lead mb-4">
                        We have an impressive collection of books existing out of
                        <span class="fw-bold">@Model.StatisticsPrice.FirstOrDefault(x => x.Key == StatisticsOptions.TotalBooks).Value</span> books,
                        divided into multiple genres. We have books ranging in prices of
                        <span class="fw-bold">@Model.StatisticsPrice.FirstOrDefault(x => x.Key == StatisticsOptions.StatisticsType).Value @Model.StatisticsPrice.FirstOrDefault(x => x.Key == StatisticsOptions.Min).Value</span>
                        and
                        <span class="fw-bold">@Model.StatisticsPrice.FirstOrDefault(x => x.Key == StatisticsOptions.StatisticsType).Value @Model.StatisticsPrice.FirstOrDefault(x => x.Key == StatisticsOptions.Max).Value</span>.
                        So there is a choice for everyone.
                    </p>
                    <div class="stats-highlight p-3 rounded-3 mt-4" style="background: rgba(255,255,255,0.15);">
                        <p class="mb-1 small text-white-50">Average Price</p>
                        <h3 class="fw-bold mb-0">@Model.StatisticsPrice.FirstOrDefault(x => x.Key == StatisticsOptions.StatisticsType).Value @Math.Round((decimal)@Model.StatisticsPrice.FirstOrDefault(x => x.Key == StatisticsOptions.Average).Value, 2)</h3>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="books-showcase position-relative">
                    <img src="https://images.pexels.com/photos/1029141/pexels-photo-1029141.jpeg"
                         class="img-fluid rounded-4 shadow-lg main-books-img"
                         alt="Book Collection"
                         style="transform: rotate(-2deg); transition: transform 0.3s ease;">
                    <div class="floating-books position-absolute" style="top: -20px; right: -20px; z-index: -1;">
                        <img src="https://images.pexels.com/photos/289737/pexels-photo-289737.jpeg"
                             class="img-fluid rounded-3 shadow"
                             alt="Books Stack"
                             style="width: 120px; height: 160px; object-fit: cover; transform: rotate(8deg); opacity: 0.8;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="carousel-section py-5 bg-light">
                <h2 class="display-6 fw-bold mb-5 text-dark text-center">Featured Books</h2>
                    <partial name="_CarouselBooksPartial" model="@Model.Carousel" />
</div>