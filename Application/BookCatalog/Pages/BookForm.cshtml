@page
@model BookCatalog.Pages.BookFormModel

<form method="post" class="form-horizontal w-50 m-auto mt-5 pt-5 align-content-center align-items-center align-middle" role="form">
    @if (Model.IsEdit){
        <h4>Update the book</h4>

    }
    else
    {
        <h4>Create a new book</h4>
    }
    <div asp-validation-summary="All" class="text-danger"></div>
    <input asp-for="IsEdit" style="display:none"/>
    <input asp-for="Book.Id" style="display:none" />


    <div class="form-group">
        <label asp-for="Book.Title" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.Title" class="form-control" />
            <span asp-validation-for="Book.Title" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Book.Author" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.Author" class="form-control" />
            <span asp-validation-for="Book.Author" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Book.PublicationYear" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.PublicationYear" class="form-control" />
            <span asp-validation-for="Book.PublicationYear" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Book.Genre" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.Genre" class="form-control" />
            <span asp-validation-for="Book.Genre" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label asp-for="Book.ISBN" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.ISBN" class="form-control" />
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label asp-for="Book.Publisher" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.Publisher" class="form-control" />
            <span asp-validation-for="Book.Publisher" class="text-danger"></span>
        </div>
    </div> 
    <div class="form-group">
        <label asp-for="Book.PageCount" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.PageCount" class="form-control" />
            <span asp-validation-for="Book.PageCount" class="text-danger"></span>
        </div>
    </div>        <div class="form-group">
        <label asp-for="Book.Price" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.Price" class="form-control" />
            <span asp-validation-for="Book.Price" class="text-danger"></span>
        </div>
    </div>        
    @if (Model.IsEdit)
    {
        <div class="form-group">
            <label asp-for="Book.IsAvailable" class="col-md-2 control-label"></label>
            <div class="col-auto">
                <input asp-for="Book.IsAvailable" />
                <span asp-validation-for="Book.IsAvailable" class="text-danger"></span>
            </div>
        </div>     }  

    <div class="form-group">
        <label asp-for="Book.ImgUrl" class="col-md-2 control-label"></label>
        <div class="col-auto">
            <input asp-for="Book.ImgUrl" class="form-control" />
            <span asp-validation-for="Book.ImgUrl" class="text-danger"></span>
        </div>
    </div>


        <div class="d-flex m-auto align-content-center align-items-center align-middle">
            <div class="col-auto m-4">
                <input type="submit" class="btn btn-success" value="Submit" />
            </div>


                <div class="col-auto m-5">
                    <a asp-controller="Books" asp-action="List" class="btn btn-danger">Cancel</a>
                </div>

    </div>
   

</form>