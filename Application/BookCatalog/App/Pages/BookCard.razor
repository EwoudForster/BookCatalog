<div class="m-3">
    <div class="card mx-2" style="width:200px; height:500px;">
        <div style="background-image:url('@Book.ImgUrl');   background-repeat: no-repeat;
  background-attachment:scroll;
  background-size: cover; height:300px;" class="card-img-top" alt="@Book.Title"></div>
        <div class="card-body">
            <h5 class="card-title">@Book.Title</h5>
            <p class="card-text card-">@Book.Author</p>
        </div>
        <a asp-controller="Books" asp-action="Details" asp-route-id="@Book.Id" class="btn btn-primary m-3">Details</a>

        <div class="card-footer text-muted">
            @Book.LastUpdated.Day/@Book.LastUpdated.Month/@Book.LastUpdated.Year
            @Book.LastUpdated.Hour:@Book.LastUpdated.Minute
        </div>
    </div>
</div>
