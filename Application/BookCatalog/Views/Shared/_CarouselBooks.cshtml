@model IEnumerable<Book>
<div id="carouselImages" style="height:400px; width:fit-content" class="carousel slide" data-bs-ride="true">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        @for (int i = 0; i < Model.Count() - 1; i++)
        {
            <button type="button" data-bs-target="#carouselImages" data-bs-slide-to="@i" aria-label="Slide @i"></button>
        })
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="@Model.First().ImgUrl" style="height:400px" class="d-block rounded-5" alt="Carousel ">
        </div>
        @foreach (Book book in Model.Skip(1))
        {
            <div class="carousel-item">
                <img src="@book.ImgUrl" class="d-block rounded-5" style="height:400px" alt="@book.Title">
            </div>
        }
    </div>
</div>